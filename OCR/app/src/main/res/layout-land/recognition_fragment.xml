<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/Recognition_fragment_ImageView"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/darker_gray"
        android:contentDescription="@string/desc" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="25"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <LinearLayout
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="true">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/descR" />

            <TextView
                android:id="@+id/Recognition_fragment_descTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <LinearLayout
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lang" />

            <TextView
                android:id="@+id/Recognition_fragment_langTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <TextView
                    style="?android:listSeparatorTextViewStyle"
                    android:id="@+id/Recognition_fragment_errorTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="@string/hint_result"
                    />

                <EditText
                    android:id="@+id/Recognition_fragment_resultEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                     android:maxLines="5"/>

                <LinearLayout
                    android:id="@+id/Recognition_fragment_LinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible" >

                    <TextView
                        android:id="@+id/Recognition_fragment_translateTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                        <!--android:visibility="invisible" -->


                    <Spinner
                        android:id="@+id/source_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         />
                    <!--android:visibility="invisible"-->

                    <TextView
                        android:id="@+id/Recognition_fragment_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <!--android:visibility="invisible"-->

                    <Spinner
                        android:id="@+id/target_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <!--android:visibility="invisible"-->

                    <Button
                        android:id="@+id/Recognition_fragment_okButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@android:string/ok"
                        android:onClick="okClickListener" />
                    <!--android:visibility="invisible"-->
                </LinearLayout>

                <TextView
                    android:id="@+id/Recognition_fragment_translateResultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>